<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/single_undertask_item"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="16dp"
    android:layout_marginBottom="4dp"
    android:background="@drawable/rounded_edittext_background_pink"
    android:orientation="horizontal"
    android:padding="8dp">

    <!-- RadioButton for marking completion -->
    <Button
        android:id="@+id/element_button"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/switch_not_clicked" /> <!-- Default state -->

    <!-- TextView for task title -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <EditText
            android:id="@+id/element_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_marginTop="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_background_pink"
            android:hint="@string/enter_undertask_title"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <EditText
            android:id="@+id/element_descr"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:layout_marginStart="8dp"
            android:layout_weight="1"
            android:background="@drawable/rounded_edittext_background_pink"
            android:hint="@string/enter_undertask_description"
            android:padding="8dp"
            android:textColor="@android:color/black"
            android:textSize="16sp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginVertical="2dp"
            android:layout_marginLeft="16dp"
            android:layout_weight="1"
            android:text="@string/add_undertask_to_friends"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <SearchView
            android:id="@+id/userSearchView"
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:layout_marginStart="8dp"
            android:background="@drawable/rounded_edittext_background_pink" />

        <ListView
            android:id="@+id/userListView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone" />
    </LinearLayout>

</LinearLayout>

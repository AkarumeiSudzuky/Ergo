<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/app_background_col"
    android:minHeight="850dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingStart="48dp"
        android:paddingTop="48dp"
        android:paddingEnd="48dp">

        <TextView
            android:id="@+id/TaskDetails"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:layout_marginBottom="16dp"
            android:text="@string/task_details"
            android:textColor="@color/darkest_purple_col"
            android:textSize="24sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/exportButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:background="@drawable/rounded_edittext_background_pink"
            android:clickable="true"
            android:text="Export"
            android:textAlignment="center"
            android:textColor="@color/darkest_purple_col"
            android:textSize="24sp"
            android:textStyle="bold" />


        <TextView
            android:id="@+id/Title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:text="@string/title"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/TitleText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/task_display_background"
            android:padding="10dp"
            android:text="@string/title_placeholder"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/PriorityText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/priority"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/PrioritySpinnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/task_display_background"
            android:padding="10dp"
            android:text="@string/priority_placeholder"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/StatusText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/status"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StatusSpinnerText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/task_display_background"
            android:padding="10dp"
            android:text="@string/status_placeholder"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/StartDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/start_date"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/StartDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/task_display_background"
            android:padding="10dp"
            android:text="@string/start_date_placeholder"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/EndDateLabel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/end_date"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/EndDateTextView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:background="@drawable/task_display_background"
            android:padding="10dp"
            android:text="@string/end_date_placeholder"
            android:textColor="@color/white"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/DescriptionText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="@string/description"
            android:textColor="@color/darkest_purple_col"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/DescriptionPlaceholder"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="96dp"
            android:background="@drawable/task_display_background"
            android:padding="10dp"
            android:text="@string/description_placeholder_text"
            android:textColor="@color/white"
            android:textSize="16sp" />

    </LinearLayout>
</ScrollView>
